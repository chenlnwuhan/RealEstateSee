<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#B3000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textview_more_checkup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="已是最新版本."
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textview_more_checkup_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textview_more_checkup_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="68dp">

        <Button
            android:id="@+id/button_more_checkup"
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:background="#fc7074"
            android:text="确定"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button_more_checkup_cancel"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:background="#d9d9d9"
            android:text="取消"
            android:textColor="#ffffff" />

</LinearLayout>
    </LinearLayout>
</RelativeLayout>