<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linnearlayout_custom_search_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="7dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="客户姓名"
            android:textColor="#000000"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/edittext_custom_name"
            android:layout_width="160dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:singleLine="true"
            android:maxLength="10"
            android:gravity="center"
            android:text="田晓明"
            android:background="@drawable/shape_edittext_border"
            android:textColor="#000000"
            android:textSize="13sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="客户电话"
            android:textColor="#000000"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/edittext_custom_phone"
            android:layout_width="160dp"
            android:inputType="number"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:singleLine="true"
            android:maxLength="16"
            android:gravity="center"
            android:text="18974512981"
            android:background="@drawable/shape_edittext_border"
            android:textColor="#000000"
            android:textSize="13sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/linearlayout_custom_property_line"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="置业顾问"
            android:textColor="#000000"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/linearlayout_custom_property"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:background="#d7d7d7"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
             >
            <TextView
                android:id = "@+id/textview_custom_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "李晓梅"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id = "@+id/image_custom_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity ="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/pic_popup_custom_dropdown"
                />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="用户等级"
            android:textColor="#000000"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/linearlayout_custom_level"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:background="#d7d7d7"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            >
            <TextView
                android:id = "@+id/textview_custom_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "B"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id = "@+id/image_custom_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity ="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/pic_popup_custom_dropdown"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="认知途径"
            android:textColor="#000000"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/linearlayout_custom_way"
            android:layout_width="160dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#d7d7d7"
            android:layout_marginRight="28dp"
            >
            <TextView
                android:id = "@+id/textview_custom_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "网络"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id = "@+id/image_custom_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity ="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/pic_popup_custom_dropdown"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#b7b7b7"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"
            android:background="@drawable/pic_button_confirm_submit"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>