<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_custom_detail_follow_sub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#d7d7d7"
    android:orientation="vertical"
    android:visibility="gone">
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/listview_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:id="@+id/relativelayout_custom_follow_add"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/pic_custom_detail_add" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#545454"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/first_point1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/pic_custom_detail_point_on" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="已带看"
                android:textColor="#fb8689"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/second_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text=""
                android:textColor="#fb8689"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/third_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text=""
                android:textColor="#fb8689"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:id="@+id/first_line1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#fb8689" />

        <ImageView
            android:id="@+id/first_point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/pic_custom_detail_point_on" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="已认筹"
                android:textColor="#fb8689"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/second_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text=""
                android:textColor="#fb8689"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/third_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_textview1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text=""
                android:textColor="#fb8689"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:id="@+id/first_line2"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#959595" />

        <ImageView
            android:id="@+id/first_point3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/pic_custom_detail_point_no" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="已下定"
                android:textColor="#959595"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/second_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text=""
                android:textColor="#959595"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/third_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text=""
                android:textColor="#959595"
                android:textSize="10sp"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:id="@+id/first_line3"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="#959595" />

        <ImageView
            android:id="@+id/first_point4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/pic_custom_detail_point_no" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="已成交"
                android:textColor="#959595"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/second_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text=""
                android:textColor="#959595"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/third_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text=""
                android:textColor="#959595"
                android:textSize="10sp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>