<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linnearlayout_confirm_root"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#dbdbdb"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="客户信息"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textview_confirm_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text=""
            android:textColor="#4970ef"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textview_confirm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/textview_confirm_phone"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="#c2c2c2" />

    <RelativeLayout
        android:id="@+id/relativelayout_building_house"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="认购房源"
            android:textColor="#000000"
            android:textSize="13sp" />
        <LinearLayout
            android:id="@+id/linerlayout_confirm_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_confirm_building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/linerlayout_confirm_building"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_confirm_building_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pic_confirm_drowdown" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="#c2c2c2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="认购金额"
            android:textColor="#000000"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/textview_confirm_buy_money"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:background="#dddddd"
            android:layout_alignParentRight="true"
            android:inputType="numberDecimal"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="#c2c2c2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="认购时间"
            android:textColor="#000000"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/linearlayout_popup_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_confirm_time"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:background="#dddddd"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="11sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="#c2c2c2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="置业顾问"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textview_confirm_propertyconsultant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="#c2c2c2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="申请人"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textview_confirm_applicants_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text=""
            android:textColor="#4970ef"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textview_confirm_applicants_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/textview_confirm_applicants_phone"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="#c2c2c2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="申请时间"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textview_confirm_applicants_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="#c2c2c2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="备注"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textview_confirm_remarks"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:background="#dbdbdb" />

    <include layout="@layout/view_lineralayout_confirm_check" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#dbdbdb"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_confirm_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:background="@drawable/pic_button_confirm_submit"
            android:text="提交"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>