<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_table_time_start"
            android:layout_width="164dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical"
            android:background="#dbdbdb"
            android:gravity="center"
            android:text="2015-05-05"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textview_table_time_end"
            android:layout_width="164dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:background="#dbdbdb"
            android:gravity="center"
            android:text="2015-05-07"
            android:textColor="#000000"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativelayout_table_volume_sub"
            android:layout_width="match_parent"
            android:layout_height="130dp">




            <TextView
                android:id="@+id/textview_table_volume_number_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="0"
                android:textColor="#eb4a3f"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textview_table_volume_number_all"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/textview_table_volume_number_all"
                android:gravity="center"
                android:text="人"
                android:textColor="#eb4a3f"
                android:textSize="15sp" />
        </RelativeLayout>

        <com.sales.realestate.android.view.RoundProgressBar xmlns:android_custom="http://schemas.android.com/apk/res/com.sales.realestate.android"
            android:id="@+id/common_pro"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:layout_centerInParent="true"
            android:max="100"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android_custom:roundColor="#FFFFFF"
            android_custom:roundProgressColor="#ff981d"
            android_custom:roundWidth="24dp"
            android_custom:textColor="#000000"
            android_custom:textIsDisplayable="true"
            android_custom:textSize="36sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#dbdbdb"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#dbdbdb"
            android:gravity="center"
            android:text="来访详情"
            android:textColor="#000000"
            android:layout_marginLeft="12dp"
            android:textSize="15sp" />
    </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/listview_mail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>