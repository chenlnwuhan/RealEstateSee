<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="34dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="原密码" />

        <EditText
            android:id="@+id/edittext_more_changepass_0"
            android:layout_width="180dp"
            android:layout_height="34dp"
            android:singleLine="true"
            android:maxLength="12"
            android:paddingLeft="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_edittext_border"
            android:password="true"
            android:text="" />
        <RelativeLayout
            android:id="@+id/view_toast_changepassword_err"
            android:background="@drawable/pic_login_toast_back"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pic_login_toast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id ="@+id/textview_changepassword_err"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:text="新密码两次输入不一致！"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="34dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="新密码" />

        <EditText
            android:id="@+id/edittext_more_changepass_1"
            android:layout_width="180dp"
            android:layout_height="34dp"
            android:singleLine="true"
            android:maxLength="12"
            android:paddingLeft="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_edittext_border"
            android:password="true"
            android:text="" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="34dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="确认新密码" />

        <EditText
            android:id="@+id/edittext_more_changepass_2"
            android:layout_width="180dp"
            android:layout_height="34dp"
            android:singleLine="true"
            android:maxLength="12"
            android:paddingLeft="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_edittext_border"
            android:password="true"
            android:text="" />
    </RelativeLayout>


    <Button
        android:id="@+id/button_more_loginout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/pic_button_confirm_submit"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="15sp" />
</LinearLayout>